<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <!-- First servlet -->
  <servlet>
    <servlet-name>join</servlet-name>
    <servlet-class>org.project.servlets.JoinRoomServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>join</servlet-name>
    <url-pattern>/joinroom</url-pattern>
  </servlet-mapping>

  <!-- Second servlet -->
  <servlet>
    <servlet-name>create</servlet-name>
    <servlet-class>org.project.servlets.CreateRoomServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>create</servlet-name>
    <url-pattern>/createroom</url-pattern>
  </servlet-mapping>

<session-config>
  <session-timeout>300</session-timeout>
</session-config>

</web-app>
